def csvToDF(location):
    df = pd.read_csv(location)
    return df

def cleanText(text):
    # takes in text and returns text lowercase with only whitespace and alphanumeric characters
    retText = ''
    try:
        for ch in text.lower():
            if ch.isalpha() or ch == ' ' or ch.isnumeric():
                retText += ch
    except:
        print("Meow")
        print(text)
    return retText

